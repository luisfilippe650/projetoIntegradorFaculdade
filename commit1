
// === SENSORES DE FOGO ===
#define sensorFogoEsquerdo A2
#define sensorFogoFrente   A1
#define sensorFogoDireita  A0

int valorSensorEsquerdo;
int valorSensorFrente;
int valorSensorDireito;

int leituraEsquerda = analogRead(A2);
int leituraFrente = analogRead(A1);
int leituraDireita = analogRead(A0);

int LIMIAR_NENHUMFOGO = 800;   // Lê valor analógico
int LIMIAR_FOGOLONGE = 700;               // Valor de referência
int LIMIAR_FOGOPROXIMO = 500;
int LIMIAR_FOGOPERTO = 100;
int LIMIAR_fOGO = 70; 
int fogo
int sinalDigital

//motor lado direito
const int ena = 10;
const int in1 = 9;
const int in2 = 8;
//motor lado esquerdo
const int enb = 4;
const int in3 = 6;
const int in4 = 5;

int velocidade = 200;

void setup() {
  Serial.begin(9600);

  // motor direito
  pinMode(ena, OUTPUT);
  pinMode(in1, OUTPUT);
  pinMode(in2, OUTPUT);

  //motor esquerdo
  pinMode(enb, OUTPUT);
  pinMode(in3, OUTPUT);
  pinMode(in4, OUTPUT);

  analogWrite(ena, velocidade);
  analogWrite(enb, velocidade);

  mov_para();
}
 
void loop() {

  valorSensorEsquerdo = mediaLeitura(sensorFogoEsquerdo, 0);
  valorSensorFrente   = mediaLeitura(sensorFogoFrente, 1);
  valorSensorDireito  = mediaLeitura(sensorFogoDireita, 2);
  

  if(){

  }
  else if(){

  }
  else if(){

  }
  else{

  }



}



// ================== MOVIMENTANDO AS RODAS =========================
void mov_frente(){
  Serial.println("carrinho andando para frente...");

  digitalWrite(in1, HIGH);
  digitalWrite(in2, LOW);
  digitalWrite(in3, LOW);
  digitalWrite(in4, HIGH);

  delay (1000);
}
void mov_re(){
  Serial.println("carrinho andando para trás...");

  digitalWrite(ena, 80); // regulador de velocidade do motor
  digitalWrite(enb, 80); // regulador de velocidade do motor
  digitalWrite(in1, LOW);
  digitalWrite(in2, HIGH);
  digitalWrite(in3, HIGH);
  digitalWrite(in4, LOW);

  delay (1000);
}
void mov_direita(){
  Serial.println("carrinho virando para direita...");

  digitalWrite(ena, 80); // regulador de velocidade do motor
  digitalWrite(in1, LOW);
  digitalWrite(in2, HIGH);
  digitalWrite(in3, LOW);
  digitalWrite(in4, HIGH);

  delay (1000);
}
void mov_esquerda(){
  Serial.println("carrinho virando para esquerda...");

  digitalWrite(enb, 80); // regulador de velocidade do motor
  digitalWrite(in1, HIGH);
  digitalWrite(in2, LOW);
  digitalWrite(in3, HIGH);
  digitalWrite(in4, LOW);

  delay (1000);
}
void mov_para(){
  Serial.println("carrinho parando...");

  digitalWrite(in1, LOW);
  digitalWrite(in2, LOW);
  digitalWrite(in3, LOW);
  digitalWrite(in4, LOW);

  delay (1000);
}

void mov_patrulha(){
  Serial.println("carrinho entrando no modo patrulha....");

  int vel = random(0,5);

  switch(vel){
    case 1: {
      mov_frente();

      break;
    }
    case 2: {
      mov_re();

      break;
    }
    case 3:{
      mov_direita();
      break;
    }
    case 4: {
      mov_esquerda();
      break;
    }
    case 5: {
      //virando 360
      mov_direita();
      mov_direita();
      break;
    }
  }
}
